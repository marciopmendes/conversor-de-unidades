#:kivy 2.1.0
#:import Factory kivy.factory.Factory

#:set color_button (2.62, 1.68, .78, 1)  # brown
#:set color_button_pressed (2.62, 1.68, .78, 1)  # darker brown
#:set color_font   (1, 1, 1, 1)  # white

<MySpinnerOption@SpinnerOption>:
    background_color: color_button
    background_down: 'atlas://data/images/defaulttheme/button'
    color: color_font

<Conversor>
    canvas.before:
        Color:
            rgba: 1, 0, .45, 1
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 1
    GridLayout:
        size: root.width, root.height
        cols: 1
        rows: 4
        padding: [10]

        GridLayout:
            size: root.width, root.height
            cols: 1
            rows: 5
            padding: [15]
            size_hint: (.2, .2)

            Label:
                id: author_label
                text: "Desenvolvido por Marcio Pinheiro Mendes"
                font_size: '18sp'

            Label:
                id: contact_label
                text: "Caso encontre algum erro ou tenha alguma dúvida/sugestão, entre em contato:"
                font_size: '18sp'

            Label:
                id: email_label
                text: "marcio.pmendes@hotmail.com"
                font_size: '18sp'

            Label:
                id: info_label
                text: "IMPORTANTE: siga as unidades indicadas entre parênteses"
                font_size: '18sp'
                bold: True

            Label:
                id: densidade_info_label
                text: "Caso utilize densidade, lembre-se de que g/mL = g/cm3 = kg/L"
                bold: True
                font_size: '18sp'

        GridLayout:
            size: root.width, root.height
            cols: 2
            rows: 5
            padding: [20]
            size_hint: (.3, .3)
            Label:
                id: input_value_label
                text: "Coloque aqui o valor que deseja converter: "
                font_size: '18sp'

            TextInput:
                id: input_value
                multiline: False
                background_color: .95, .65, .05, .9
                foreground_color: 1, 1, 1, 1
                cursor_color: 1, 1, 1, 1
                input_filter: "float"
                hint_text: 'Utilize ponto para casas decimais'
                hint_text_color: 1, 1, 1, 1
                halign: 'center'

            Label:
                id: input_unit_label
                text: "Escolha a unidade de entrada: "
                font_size: '18sp'

            Spinner:
                id: input_dropdown
                text: "Clique aqui para escolher a unidade"
                background_color: 2.62, 1.68, .78, 1
                background_down: 'atlas://data/images/defaulttheme/spinner'
                values: ['mg/L', 'µg/L', 'ng/L', 'g/L', 'mol/L', 'µg/mL', 'mg/Kg']
                option_cls: Factory.get("MySpinnerOption")
                on_text: root.input_spinner_clicked(input_dropdown.text)

            Label:
                id: output_unit_label
                text: "Escolha a unidade de saida: "
                font_size: '18sp'

            Spinner:
                id: output_dropdown
                text: "Clique aqui para escolher a unidade"
                background_color: 2.62, 1.68, .78, 1
                background_down: 'atlas://data/images/defaulttheme/spinner'
                values: []
                option_cls: Factory.get("MySpinnerOption")
                on_text: root.output_spinner_clicked(output_dropdown.text)

            Label:
                id: input_density_label
                text: "Densidade (g/mL): "
                font_size: '18sp'

            TextInput:
                id: input_density
                multiline: False
                disabled: True
                text: "1"
                background_color: .95, .65, .05, .9
                foreground_color: 1, 1, 1, 1
                cursor_color: 1, 1, 1, 1
                input_filter: "float"

            Label:
                id: input_molar_mass_label
                text: "Massa Molar (g/mol): "
                font_size: '18sp'

            TextInput:
                id: input_molar_mass
                multiline: False
                disabled: True
                text: "1"
                background_color: .95, .65, .05, .9
                foreground_color: 1, 1, 1, 1
                cursor_color: 1, 1, 1, 1
                input_filter: "float"

        MDFillRoundFlatButton:
            id: converter_button
            md_bg_color: .93, .55, .12, .75
            font_size: "20dp"
            text: "CONVERTER"
            size_hint: (.05, .05)
            on_release: root.on_click_converter(input_value.text, input_density.text, input_molar_mass.text)

        Label:
            id: resultado_label
            text: ""
            size_hint: (.1, .1)
            font_size: '26sp'
